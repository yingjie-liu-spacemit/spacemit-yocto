#!/bin/sh

mount -t proc proc /proc
ROOT=
NFSROOT=
UBI_MTD=
UBI_DEV=
UBI_VOL=
ROOTFSTYPE=
export init=/sbin/init
mount -t sysfs sysfs /sys
mount -t devtmpfs -o nosuid,mode=0755 devtmpfs /dev

for x in $(cat /proc/cmdline); do
	case $x in
		init=*)
			init=${x#init=}
			;;
		root=UUID=*)
			ROOT=${x#root=UUID=}
			ROOT=$(blkid | grep "$ROOT" | awk -F ':' '{print $1}')
			;;
		root=ubi*)
			# Parse parameters like root=ubi0:rootfs
			UBI_ROOT=${x#root=}
			UBI_DEV=$(echo $UBI_ROOT | cut -d ':' -f 1)
			UBI_VOL=$(echo $UBI_ROOT | cut -d ':' -f 2)
			UBI_DEV=${UBI_DEV#ubi}
			ROOT="ubi"
			;;
		root=*)
			ROOT=${x#root=}
			;;
		rootfstype=*)
			ROOTFSTYPE=${x#rootfstype=}
			;;
		ubi.mtd=*)
			UBI_MTD=${x#ubi.mtd=}
			;;
		nfsroot=*)
			NFSROOT=${x#nfsroot=}
			;;
	esac
done

mkdir -p /dev/pts
mkdir -p /dev/shm
mount -t devpts -o defaults,mode=644,ptmxmode=666 devpts /dev/pts
mount -t tmpfs tmpfs /dev/shm
mount -t tmpfs tmpfs /tmp
mount -t tmpfs tmpfs /run

if [ "x${ROOT}" = "x" ]; then
	exec /sbin/init
fi

export ROOT

mkdir /rootfs
if [ $ROOT == "/dev/nfs" ] && [ "x${NFSROOT}" != "x" ];then
	/sbin/ifup -a
	mount -t nfs -o nolock $NFSROOT /rootfs
elif [ $ROOT == "ubi" ] && [ "x${UBI_MTD}" != "x" ] && [ "x${UBI_DEV}" != "x" ] && [ "x${UBI_VOL}" != "x" ];then
	echo "Mounting UBI/UBIFS filesystem"
	# Attach UBI device if not already attached
	if [ ! -e /dev/ubi${UBI_DEV} ]; then
		echo "Attaching UBI device: mtd${UBI_MTD} -> ubi${UBI_DEV}"
		ubiattach -m ${UBI_MTD} -d ${UBI_DEV}
		sleep 1
	fi

	# Mount UBIFS
	echo "Mounting UBIFS volume: ubi${UBI_DEV}:${UBI_VOL} -> /rootfs"
	mount -t ubifs ubi${UBI_DEV}:${UBI_VOL} /rootfs

	# Create basic device nodes if needed
	if [ ! -e /rootfs/dev/console ]; then
		/bin/mknod /rootfs/dev/console c 5 1
	fi
	if [ ! -e /rootfs/dev/null ]; then
		/bin/mknod /rootfs/dev/null c 1 3
	fi
else
	cnt=0
	while [ $cnt -lt 100 ]
	do
		if [ ! -e $ROOT ];then
			sleep 0.1
		else
			echo "find $ROOT: $cnt"
			break
		fi
		let cnt++
	done
	e2fsck -y $ROOT
	resize2fs $ROOT
	mount $ROOT /rootfs/
	if [ ! -e /rootfs/dev/console ]; then
		/bin/mknod /rootfs/dev/console c 5 1
	fi
	if [ ! -e /rootfs/dev/null ]; then
		/bin/mknod /rootfs/dev/null c 1 3
	fi
fi

mount -n -o move /proc /rootfs/proc
mount -n -o move /sys /rootfs/sys
mount -n -o move /run /rootfs/run
mount -n -o move /tmp /rootfs/tmp
mount -n -o move /dev /rootfs/dev
mount -t debugfs debugfs /rootfs/sys/kernel/debug

exec switch_root /rootfs "${init}" "$@"
echo "Something went badly wrong in the initramfs."
